<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/permission_icon_image"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/permission_desc_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/permission_name_textView"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/permission_name_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text="Permission name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/permission_desc_textView"
            app:layout_constraintEnd_toStartOf="@+id/allow_btn_permission"
            app:layout_constraintStart_toEndOf="@+id/permission_icon_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/permission_desc_textView"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:text="This permission is needed for this purpose. Or else app will not work properly"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/permission_name_textView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/permission_name_textView"
            app:layout_constraintTop_toBottomOf="@+id/permission_name_textView" />

        <Button
            android:id="@+id/allow_btn_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow"
            app:layout_constraintBottom_toBottomOf="@+id/permission_desc_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
